---
import '../styles/saveTheDate.css';
import '../styles/global.css';
---
<main>
    <div class="save-the-date-container">
        <img src="/background/lavender-background.png" alt="Champ de lavande" class="cover-image">

        <!-- Vague décorative -->
        <div class="wave-container">
        </div>

        <div class="content">
            <div class="title">
                <span class="save" id="save"></span>
                <span class="the" id="the"></span>
                <span class="date" id="date"></span>
            </div>

            <div class="wedding-info">
                <div class="pour-le-mariage" id="line1"></div>
                <div class="names" id="line2"></div>
                <div class="wedding-date" id="wedding-date"></div>
                <div class="location" id="location"></div>
            </div>

            <div class="polaroids">
                <div class="polaroid">
                    <img src="/photos/2022-couple-NB.png" alt="Photo des fiancés 1">
                </div>
            </div>

            <div class="invitation-text">
                <p id="paragraph1"></p>
                <p id="paragrpah2"></p>
            </div>

            <div class="polaroids">
                <div class="polaroid">
                    <img src="/api/placeholder/200/200" alt="Photo des fiancés 2">
                </div>
            </div>

            <!-- Icône de lavande -->
            <img src="">

            <div class="form-reminder" id="text-form"></div>

            <div class="polaroids">
                <div class="polaroid">
                    <img src="/api/placeholder/200/200" alt="Photo des fiancés 3">
                </div>
            </div>
        </div>
    </div>
</main>